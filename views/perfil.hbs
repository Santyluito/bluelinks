<div class="row justify-content-center">
  <div class="col-md-6 ">
    <h1 class="text-center text-danger">{{ user.userName }}</h1>
    <p class="text-center text-info">Edita aqui tu perfil</p>
    <div class="my-5 text-center">
      {{#if imagen}}
        <img src="/img/profiles/{{ imagen }}" class="img-thumbnail rounded-circle shadow " alt="">
      {{else}}
        <img src="/img/profiles/perfil.jpg" class="img-thumbnail rounded-circle shadow " alt="">
      {{/if}}
    </div>

    <form action="/perfil?_csrf={{csrfToken}}" method="post" enctype="multipart/form-data">
      {{!-- <input type="hidden" name="_csrf" value="{{csrfToken}}"> --}}
      <input class="form-control" type="file" id="formFile" name="myFile">
      <button class="btn btn-secondary my-3">
        Cambiar imagen de perfil
      </button>
    </form>
  </div>
</div>